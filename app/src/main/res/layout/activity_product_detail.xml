<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detailBarang.ProductDetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <FrameLayout
                    android:id="@+id/productimage"
                    android:layout_width="match_parent"
                    android:layout_height="329dp"
                    android:elevation="4dp"
                    android:visibility="visible">


                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:id="@+id/imgDetail"
                        tools:src="@drawable/img_1"
                        android:contentDescription="@string/todo"/>

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/iv_back_product"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="16dp"
                        android:elevation="4dp"
                        android:src="@drawable/left_arrow"
                        android:contentDescription="@string/todo"/>


            </FrameLayout>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_detail_product"
                    android:orientation="vertical"
                    android:layout_below="@id/productimage"
                    android:padding="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/judulProduk"
                        android:gravity="right"
                        tools:text="Niqab Bandana Poni Shiffon Arab"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/berlinsans"
                        android:textColor="@android:color/black"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/descProduk"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/berlinsans"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin non interdum erat. Integer pellentesque lobortis lorem. Nullam eleifend purus ex, gravida euismod nibh ornare vel. Mauris ac nibh ante. Proin vel mauris tortor. Praesent eros erat, tincidunt ac nisi vitae, placerat sollicitudin diam. Integer sollicitudin blandit nunc, quis ornare elit gravida sit amet."
                />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_detail_product"
                    android:background="#fff"
                    android:orientation="vertical"
            >


                <TextView
                        android:id="@+id/quantitiy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Quantity"
                        android:textColor="#404547" />


                <LinearLayout
                        android:id="@+id/ll_qty_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/btnMinus"
                            android:layout_width="20dp"
                            android:layout_height="21dp"
                            android:layout_marginEnd="8dp"
                            android:text="-"
                            android:textStyle="bold"
                            android:background="@drawable/rect"/>

                    <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    <Button
                            android:id="@+id/btnPlus"
                            android:layout_width="20dp"
                            android:layout_height="21dp"
                            android:layout_marginStart="8dp"
                            android:text="+"
                            android:textStyle="bold"
                            android:background="@drawable/rect"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_qty"
                    android:background="#fff"
                    android:orientation="vertical"
            >


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvDeskripsi"
                        android:text="@string/deskripsi_pesanan"
                        android:textColor="#404547" />


                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtDeskripsiPesan"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="16dp"
                        android:hint="@string/deskripsi"
                        android:paddingTop="8dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_below="@+id/ll_deskripsi"
                    android:background="#fff"
                    android:gravity="center"

            >

                <TextView
                        android:layout_weight="1"
                        android:id="@+id/total1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textSize="18sp"
                        android:fontFamily="@font/berlinsans"
                        android:textColor="#333333"

                />

                <TextView

                        android:id="@+id/hargaBarang"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:gravity="end"
                        android:fontFamily="@font/berlinsans"
                        android:textStyle="bold"
                />



            </LinearLayout>

            <LinearLayout
                    android:id="@+id/continue_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_price"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"

            >

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_bg"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="12dp"
                        android:paddingLeft="90dp"
                        android:layout_marginBottom="16dp"
                        android:paddingRight="90dp"
                        android:id="@+id/btnSaveCart"
                        android:paddingTop="12dp"
                        android:text="@string/add_to_cart"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/berlinsans"
                        android:textAllCaps="false"/>

            </LinearLayout>

            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar_detail_barang"
                    android:layout_centerInParent="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>