<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:id="@+id/ll_konfirmasi">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="#F59F13"
                          tools:text="Sedang Konfirmasi"
                          android:textSize="18sp"
                          android:fontFamily="@font/berlinsans"
                          android:textColor="@android:color/black"
                          android:gravity="center"
                          android:id="@+id/tv_status_transaksi"/>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_konfirmasi"
                    android:orientation="vertical">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          tools:text="Pesanan 7a86a6d1b01873b2c5ffe9243fa0b02a >"
                          android:textSize="18sp"
                          android:fontFamily="@font/berlinsans"
                          android:layout_margin="8dp"
                          android:id="@+id/tvKodePesanan"
                          android:textColor="@android:color/black"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tanggal Transaksi"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/berlinsans"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            tools:text="2019-06-22"
                            android:id="@+id/tvTglPesanan"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/berlinsans"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                    <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Alamat Penerima"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/berlinsans"
                            android:textStyle="bold" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            tools:text="Jl. Shirotul Mustaqim"
                            android:id="@+id/tvAlamatPesanan"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/berlinsans"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="20dp"
                            android:text="Total Pembayaran"
                            android:textSize="16sp"
                            android:fontFamily="@font/berlinsans"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="20dp"
                            tools:text="Rp. 1000000"
                            android:textSize="16sp"
                            android:id="@+id/tvTotalPesanan"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/berlinsans"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>