<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductDetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <FrameLayout
                    android:id="@+id/productimage"
                    android:layout_width="match_parent"
                    android:layout_height="329dp"
                    android:elevation="4dp"
                    android:visibility="visible">


                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/img_1" />

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="16dp"
                        android:elevation="4dp"
                        android:src="@drawable/left_arrow" />


            </FrameLayout>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_detail_product"
                    android:orientation="vertical"
                    android:layout_below="@id/productimage"
                    android:padding="16dp">

                <TextView                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Niqab Bandana Poni Shiffon Arab"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:fontFamily="@font/berlinsans"
                        android:textColor="@android:color/black"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/ll_colour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_detail_product"
                    android:background="#fff"
                    android:orientation="vertical"
            >


                <TextView
                        android:id="@+id/colortext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="@font/berlinsans"
                        android:layout_marginTop="16dp"
                        android:text="Colour"
                        android:textColor="#404547" />


                <LinearLayout
                        android:id="@+id/colorcircle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:orientation="horizontal">


                    <!--******YELLOW COLOUR**********-->
                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1">


                        <ImageView
                                android:id="@+id/yellow1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/white"

                        />
                    </FrameLayout>


                    <!--******BLUE COLOUR**********-->
                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1">


                        <ImageView
                                android:id="@+id/blue1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/gray"

                        />

                    </FrameLayout>

                    <!--******RED COLOUR**********-->
                    <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1">


                        <ImageView
                                android:id="@+id/red1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:background="@drawable/black"

                        />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/ll_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_colour"
                    android:background="#fff"
                    android:orientation="vertical"
            >


                <TextView
                        android:id="@+id/sizetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Size"
                        android:textColor="#404547" />


                <LinearLayout
                        android:id="@+id/sizecircle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:text="S"
                            android:background="@drawable/sizeround1"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/berlinsans"
                            android:layout_gravity="center"
                            android:gravity="center"

                    />
                    <TextView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:text="M"
                            android:background="@drawable/sizeround1"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"

                    />
                    <TextView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:text="L"
                            android:background="@drawable/sizeround1"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                    />
                    <TextView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:text="XL"
                            android:background="@drawable/sizeround1"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                    />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_below="@+id/ll_size"
                    android:background="#fff"
                    android:gravity="center"

            >

                <TextView
                        android:layout_weight="1"
                        android:id="@+id/total1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="18sp"
                        android:fontFamily="@font/berlinsans"
                        android:textColor="#333333"

                />

                <TextView

                        android:id="@+id/total2"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="$ 858.00"
                        android:gravity="end"
                        android:fontFamily="@font/berlinsans"
                        android:textStyle="bold"
                />



            </LinearLayout>

            <LinearLayout
                    android:id="@+id/continue_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_price"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"

            >

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_bg"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:paddingBottom="12dp"
                        android:paddingLeft="90dp"
                        android:paddingRight="90dp"
                        android:paddingTop="12dp"
                        android:text="Continue"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/berlinsans"
                        android:textAllCaps="false"
                        />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>