<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".category.DetailCategoryActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_margin="16dp"
            android:id="@+id/nama_category"
            android:fontFamily="@font/berlinsans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kosong_detail_category"
            android:text="Tidak Ada Data"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:drawableTop="@drawable/empty"
    />

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar_detail_category"
            android:layout_gravity="center"
    />

    <com.mlsdev.animatedrv.AnimatedRecyclerView
            android:id="@+id/rv_category_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            tools:listitem="@layout/item_all_product"
            app:gridLayoutManagerColumns="2"
            app:layoutAnimation="@anim/layout_animation_from_bottom_scale"
            app:layoutManagerReverse="false"
            app:layoutManagerType="grid"
            app:animationDuration="500"
            app:layoutManagerOrientation="vertical"/>

</LinearLayout>