<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/imgCart"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:srcCompat="@drawable/img_1" />
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#fff"
                        android:gravity="center"
                        android:id="@+id/ll_1"
                        android:layout_marginStart="8dp"
                >

                    <TextView
                            android:layout_weight="1"
                            android:id="@+id/judulCart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Niqab Bandana Poni Shiffon Arab"
                            android:fontFamily="@font/berlinsans"
                            android:textColor="@android:color/black"

                    />

                    <ImageButton
                            android:id="@+id/btnRemove"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right"
                            app:srcCompat="@drawable/cancel" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/ll_1"
                        android:id="@+id/ll_2"
                        android:layout_marginStart="8dp">

                    <TextView
                            android:id="@+id/descCart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            tools:text="Deskripsi"
                            android:fontFamily="@font/berlinsans"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/ll_2"
                        android:id="@+id/ll_3">

                    <TextView
                            android:id="@+id/qtyCart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            tools:text="Jumlah"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/berlinsans"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/ll_3"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#fff"
                            android:gravity="center"
                    >

                        <TextView
                                android:layout_weight="1"
                                android:id="@+id/hargaCart"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:text="Harga Rp. 48000"
                                android:fontFamily="@font/berlinsans"
                                android:textColor="@color/colorPrimary"

                        />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>