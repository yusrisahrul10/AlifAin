<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".transaksilist.TransaksiListActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_list_trnsaksi">

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/iv_back_transaksi"
                android:layout_marginTop="27dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/left_arrow"
                android:contentDescription="@string/todo"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2sp"
                android:text="Daftar Transaksi"
                android:fontFamily="@font/berlinsans"
        />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/ll_list_trnsaksi"
            tools:listitem="@layout/item_list_transaksi"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kosong_list_transaksi"
            android:text="Tidak Ada Data"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/empty"
    />

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progress_bar_list_transaksi"
            android:layout_gravity="center"
    />

</RelativeLayout>